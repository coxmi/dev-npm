{
  "name": "project-name",
  "version": "0.0.1",
  "private": true,
  "devDependencies": {
    "autoprefixer": "^6.5.3",
    "babel-preset-es2015": "^6.18.0",
    "babelify": "^7.3.0",
    "browserify": "^13.1.1",
    "less": "^2.7.1",
    "less-plugin-autoprefix": "^1.5.1",
    "less-plugin-clean-css": "^1.5.1",
    "minifyify": "^7.3.4",
    "onchange": "^3.2.0",
    "watchify": "^3.7.0"
  },
  "config": {
    "less_input": "httpdocs/assets/css/source/main.less",
    "less_output": "httpdocs/assets/css/dist/site.css",
    "js_input": "httpdocs/assets/js/source/*.js",
    "browserify_input": "httpdocs/assets/js/source/main.js",
    "browserify_output_folder": "httpdocs/assets/js/dist",
    "browserify_output": "httpdocs/assets/js/dist/site.js",
    "browserify_sourcemap": "httpdocs/assets/js/dist/site.js.map",
    "browserify_sourcemap_uri": "site.js.map"
  },
  "scripts": {
    "build:less": "lessc --source-map --strict-imports --clean-css --autoprefix='Firefox > 20' $npm_package_config_less_input $npm_package_config_less_output",
    "build:less:dev": "lessc --source-map $npm_package_config_less_input $npm_package_config_less_output",
    "watch:less": "npm run build:less:dev && onchange 'httpdocs/**/*.less' -- npm run build:less:dev",
    "build:browserify": "mkdir -p $npm_package_config_browserify_output_folder && browserify $npm_package_config_browserify_input --debug --transform [ babelify --presets [ es2015 ] ] --plugin [minifyify --compressPath . --map $npm_package_config_browserify_sourcemap_uri --output $npm_package_config_browserify_sourcemap] --outfile $npm_package_config_browserify_output",
    "watch:browserify": "mkdir -p $npm_package_config_browserify_output_folder && watchify $npm_package_config_browserify_input --verbose --debug --transform [ babelify --presets [ es2015 ] ] --plugin [minifyify --compressPath . --map $npm_package_config_browserify_sourcemap_uri --output $npm_package_config_browserify_sourcemap]  --outfile $npm_package_config_browserify_output",
    "watch": "npm run watch:less & npm run watch:browserify",
    "build": "npm run build:less & npm run build:browserify"
  }
}
