{
  "name": "project-name",
  "version": "0.0.1",
  "private": true,
  "devDependencies": {
    "autoprefixer": "^8.6.0",
    "babel-core": "^6.26.3",
    "babel-preset-env": "^1.6.1",
    "babelify": "^8.0.0",
    "browserify": "^16.2.2",
    "less": "^2.7.3",
    "less-plugin-autoprefix": "^1.5.1",
    "less-plugin-clean-css": "^1.5.1",
    "minifyify": "^7.3.5",
    "onchange": "^4.0.0",
    "watchify": "^3.9.0"
  },
  "config": {
    "less_watch": "httpdocs/**/*.less",
    "less_input": "httpdocs/assets/css/source/main.less",
    "less_output": "httpdocs/assets/css/dist/site.css",
    "js_input": "httpdocs/assets/js/source/main.js",
    "js_output_folder": "httpdocs/assets/js/dist",
    "js_output": "httpdocs/assets/js/dist/site.js",
    "js_sourcemap": "httpdocs/assets/js/dist/site.js.map",
    "js_sourcemap_uri": "site.js.map"
  },
  "scripts": {
    "build:less": "lessc --source-map --strict-imports --clean-css --autoprefix='> 1%, Firefox > 20, IE > 7, Chrome >= 21, Safari >= 6.0' $npm_package_config_less_input $npm_package_config_less_output",
    "build:less:dev": "lessc --source-map --strict-imports $npm_package_config_less_input $npm_package_config_less_output",
    "watch:less": "yarn build:less:dev && onchange $npm_package_config_less_watch -- yarn build:less:dev",
    "build:js": "mkdir -p $npm_package_config_js_output_folder && browserify $npm_package_config_js_input --debug --transform [ babelify --sourceMap --presets [ env ] ] --plugin [ minifyify --compressPath . --map $npm_package_config_js_sourcemap_uri --output $npm_package_config_js_sourcemap ] --outfile $npm_package_config_js_output --verbose",
    "watch:js": "mkdir -p $npm_package_config_js_output_folder &&   watchify $npm_package_config_js_input --debug --transform [ babelify --sourceMap --presets [ env ] ] --plugin [ minifyify --compressPath . --map $npm_package_config_js_sourcemap_uri --output $npm_package_config_js_sourcemap ] --outfile $npm_package_config_js_output --verbose",
    "watch": "yarn watch:less & yarn watch:js",
    "build": "yarn build:less & yarn build:js"
  }
}
